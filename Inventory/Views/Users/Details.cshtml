@model Inventory.Models.User

@{
    ViewBag.Title = "Details";
}



<title>User Details</title>

<style type="text/css">
    dt {
        padding-left: 5px;
    }

    dd {
        padding-left: 5px;
        background-color: #FFFFFF;
    }
</style>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>User Details</h2>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="card bg-light mb-3">
        <div class="card-body">

            <dl class="row dl-horizontal" padding-left: 5px;>

                <dt class="col col-md-2">
                    @Html.DisplayName("User Type :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Usr_Type)
                </dd>

                <dt class="col col-md-2">
                    @Html.DisplayName("First Name :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.F_Name)
                </dd>

                <dt class="col col-md-2">
                    @Html.DisplayName("Last Name :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.L_Name)
                </dd>

                <dt class="col col-md-2">
                    @Html.DisplayName("Phone Number :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Pho_Num)
                </dd>

                <dt class="col col-md-2">
                    @Html.DisplayName("Created By :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Created_By)
                </dd>

                <dt class="col col-md-2">
                    @Html.DisplayName("Updated By :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Updated_By)
                </dd>

                <dt class="col col-md-2">
                    @Html.DisplayName("Created At :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Created_At)
                </dd>

                <dt class="col col-md-2">
                    @Html.DisplayName("Updated At :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Updated_At)
                </dd>

                <dt class="col col-md-2">
                    @Html.DisplayName("Status :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Status)
                </dd>

                @*<dt>
                    @Html.DisplayName("Department Department Name :")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Department.Dep_Nam)
                </dd>*@

            </dl>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Usr_Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</section>
