@model Inventory.Models.Asset

@{
    ViewBag.Title = "Details";
}

<title>Asset Details</title>

<style type="text/css">
    dt {
        padding-left: 5px;
    }

    dd {
        padding-left: 5px;
        background-color: #FFFFFF;
    }
</style>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Asset Details</h2>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="card bg-light mb-3">
        <div class="card-body">

            <dl class="dl-horizontal" padding-left: 5px;>

                <dt>
                    @Html.DisplayName("Serial Number :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Ser_Num)
                </dd>

                <dt>
                    @Html.DisplayName("Model Number :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Mod_Num)
                </dd>

                <dt>
                    @Html.DisplayName("Asset Type :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Ast_Type)
                </dd>

                <dt>
                    @Html.DisplayName("Cost :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Cost)
                </dd>

                <dt>
                    @Html.DisplayName("Date :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Date)
                </dd>

                <dt>
                    @Html.DisplayName("Created By :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Created_By)
                </dd>

                <dt>
                    @Html.DisplayName("Updated By :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Updated_By)
                </dd>

                <dt>
                    @Html.DisplayName("Created At :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Created_At)
                </dd>

                <dt>
                    @Html.DisplayName("Updated At :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Updated_At)
                </dd>

                <dt>
                    @Html.DisplayName("Is Active :")
                </dt>

                <dd class="col col-md-4 form-control">
                    @Html.DisplayFor(model => model.Is_Active)
                </dd>

            </dl>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Ast_Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</section>
