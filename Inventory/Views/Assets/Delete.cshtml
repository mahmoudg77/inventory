@model Inventory.Models.Asset

@{
    ViewBag.Title = "Delete";
}

<title>Delete Asset</title>

<style type="text/css">
    dt {
        padding-left: 5px;
    }

    dd {
        padding-left: 5px;
        background-color: #FFFFFF;
    }
</style>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Delete Asset</h2>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="card bg-light mb-3">
        <div class="card-body">
            <div>
                <h3>Are you sure you want to delete this Asset ?</h3>
                <dl>

                    <dt>
                        @Html.DisplayName("Serial Number :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Ser_Num)
                    </dd>

                    <dt>
                        @Html.DisplayName("Model Number :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Mod_Num)
                    </dd>

                    <dt>
                        @Html.DisplayName("Asset Type :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Ast_Type)
                    </dd>

                    <dt>
                        @Html.DisplayName("Cost :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Cost)
                    </dd>

                    <dt>
                        @Html.DisplayName("Date :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Date)
                    </dd>

                    <dt>
                        @Html.DisplayName("Created By :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Created_By)
                    </dd>

                    <dt>
                        @Html.DisplayName("Updated By :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Updated_By)
                    </dd>

                    <dt>
                        @Html.DisplayName("Created At :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Created_At)
                    </dd>

                    <dt>
                        @Html.DisplayName("Updated At :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Updated_At)
                    </dd>

                    <dt>
                        @Html.DisplayName("Is Active :")
                    </dt>

                    <dd class="col col-md-4 form-control">
                        @Html.DisplayFor(model => model.Is_Active)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions  col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete Asset" class='btn btn-danger btn-sm' />

                    </div>
                }
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>
