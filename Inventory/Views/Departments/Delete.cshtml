@model Inventory.Models.Department

@{
    ViewBag.Title = "Delete";
}

<title>Delete Department</title>

<style type="text/css">
    dt {
        padding-left: 5px;
    }

    dd {
        padding-left: 5px;
        background-color: #FFFFFF;
    }
</style>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Delete Department</h2>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="card bg-light mb-3">
        <div class="card-body">
            <div>
                <h3>Are you sure you want to delete this Department ?</h3>
                <dl>

                    <dt>
                        @Html.DisplayName("Department Name :")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Dep_Nam)
                    </dd>

                    <dt>
                        @Html.DisplayName("Created By :")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Created_By)
                    </dd>

                    <dt>
                        @Html.DisplayName("Updated By :")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Updated_By)
                    </dd>

                    <dt>
                        @Html.DisplayName("Created At :")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Created_At)
                    </dd>

                    <dt>
                        @Html.DisplayName("Updated At :")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Updated_At)
                    </dd>

                    <dt>
                        @Html.DisplayName("Priority :")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Priority)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions  col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete Department" class='btn btn-danger btn-sm' />

                    </div>
                }
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>
